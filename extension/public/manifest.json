{
  "manifest_version": 3,
  "name": "Text Selection Panel",
  "version": "1.0.0",
  "description": "Shows selected text in a panel",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ]
}