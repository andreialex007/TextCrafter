{
  "manifest_version": 3,
  "name": "Text Select Panel",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "commands": {
    "toggle-panel": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Command+S"
      },
      "description": "Toggle selection panel"
    }
  }
}